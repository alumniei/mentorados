<h1><%= t 'views.sessions.new.title' %></h1>

<%= form_with model: @session, url: session_path, class: "new-session-form" do |f| %>
  <%- if @session.errors.any? %>
    <ul class="sessions-errors">
      <% @session.errors.each do |_, error| %>
        <li><%= error %></li>
      <% end %>
    </ul>
  <%- end %>

  <div>
    <%= f.label :email %>
    <%= f.email_field :email, placeholder: "email@fe.up.pt", required: true %>
  </div>

  <div>
    <%= f.label :password %>
    <%= f.password_field :password, required: true %>
  </div>

  <%= f.submit %>
<% end %>

<p>
  <%= t 'views.sessions.new.forgot_password' %>
  <%= link_to t('views.sessions.new.recover_password'), new_password_recovery_path %>
</p>

<p>
  <%= t 'views.sessions.new.no_account' %>
  <%= link_to t('views.sessions.new.register'), new_registration_path %>
</p>
