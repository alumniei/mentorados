<!DOCTYPE html>
<html>
  <head>
    <title><%= t 'views.home.index.title' %></title>
    <%= csp_meta_tag %>

    <meta name="viewport" content="width=device-width, initial-scale=1">

    <%= stylesheet_link_tag 'application', media: 'all' %>
  </head>

  <body>
    <header>
      <h1><%= link_to_unless_current t('views.home.index.title'), root_path %></h1>

      <%- if current_user %>
        <nav>
          <ul>
            <%- if current_user.admin? %><li><%= link_to t('views.layout.navigation.dashboard'), dashboard_path %></li><% end %>
            <li><%= link_to t('views.layout.navigation.mentors'), mentors_path %></li>
            <%- if current_user.mentor? %><li><%= link_to t('views.layout.navigation.profile'), edit_profile_path %></li><% end %>
            <li><%= button_to t('views.layout.navigation.logout'), session_path, method: :delete %></li>
          </ul>
        </nav>
      <% end %>
    </header>
    <%= yield %>
  </body>
</html>
