<h1>Create an account as a student</h1>

<p>
  <%= t('views.registrations.new.restriction', href: mail_to("mentor@alumniei.pt", "mentor@alumniei.pt")).html_safe %>
</p>

<p>
  <%= t(
    'views.registrations.new.consent',
    code_of_conduct: link_to(t('views.registrations.show.code_of_conduct'), code_of_conduct_path),
    cookie_policy: link_to(t('views.registrations.show.cookie_policy'), cookies_path),
    privacy_policy: link_to(t('views.registrations.show.privacy_policy'), privacy_path),
   ).html_safe %>
</p>

<%= form_with model: @user, url: registrations_path, class: "new-registration-form" do |f| %>
  <%- if @user.errors.any? %>
    <ul class="registrations-errors">
      <% @user.errors.each do |_, error| %>
        <li><%= error %></li>
      <% end %>
    </ul>
  <%- end %>

  <div>
    <%= f.label :email %>
    <%= f.email_field :email, placeholder: "email@fe.up.pt", required: true %>
  </div>

  <div>
    <%= f.label :password %>
    <%= f.password_field :password, required: true %>
  </div>

  <%= f.submit %>
<% end %>

<p>
  <%= t 'views.registrations.new.existing_account' %>
  <%= link_to t('views.registrations.new.login'), new_session_path %>
</p>
